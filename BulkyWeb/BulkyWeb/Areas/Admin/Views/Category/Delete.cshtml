@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-controller="Category" asp-action="Delete" method="post" class="row">
            <div class="border p-3">

                <input asp-for="Id" hidden />
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" disabled asp-for="Name" />
                    <label class="ms-2" asp-for="Name"></label>


                </div>
                <div class="form-floating py-2 col-12">
                    <input type="number" class="form-control border-0 shadow" disabled asp-for="DisplayOrder" />
                    <label class="ms-2">Display Order</label>


                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-4 col-lg-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control"> Back to List</a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




@section Scripts {

    @* Clinet Side Validation *@
    <partial name="_ValidationScriptsPartial">
        </>
}
